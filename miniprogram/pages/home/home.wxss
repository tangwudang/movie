/* pages/home/home.wxss */

.recommend_movie{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
}

.recommend_movie image{
  width: 500rpx;
  height: 700rpx;
}

.recommend_name{
  margin-top: 50rpx;
  color: black;
  font-weight: 900;
  font-size: 48rpx;
}

.recommend_user{
  display: flex;
  margin-top:20rpx;
  justify-content: center;
  align-items: center;
}


.recommend_user image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.recommend_nickname{
  font-size: 32rpx;
  color: gray
}

.nav-bar{
  width: 100%;
  height: 100rpx;
  display: flex;
  position: fixed;
  bottom: 0;
  justify-content: center;
  background: white
}

.nav-bar .nav_button{
  display: flex;
  justify-content: center;
  text-align: center;
  align-items: center;
  flex: 1;
}

.nav_button view{
  font-size: 36rpx;
  color: gray
}

.nav_button image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}

.no_recommend{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 200rpx;
}